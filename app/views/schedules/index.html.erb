<h1>週間スケジュール</h1>

<nav class="mb-3 d-flex justify-content-between align-items-center">
  <%= link_to '<< 先週', schedules_path(start_date: (@date || Date.today) - 1.week), class: "btn btn-primary" %>
  <span class="h5"><%= @date.strftime("%Y年 %m月") %></span>
  <%= link_to '次週 >>', schedules_path(start_date: (@date || Date.today) + 1.week), class: "btn btn-primary" %>
</nav>

<div class="weekly-calendar">
  <table class="table table-bordered text-center align-middle">
    <thead class="table-light">
      <tr>
        <!-- 左上の「日時」ヘッダー -->
        <th style="width: 100px; background-color: #f8f9fa;">日時</th>
        
        <!-- 横軸: 日付ヘッダー -->
        <% (@week_days || []).each do |day| %>
          <th>
            <%= day.day %><br>
            (<%= %w(日 月 火 水 木 金 土)[day.wday] %>)
          </th>
        <% end %>
      </tr>
    </thead>
    
    <tbody>
      <!-- 縦軸: 各時限ごとにループ -->
      <% @periods.each do |period| %>
        <tr>
          <!-- 左端: 時限と時間の表示 -->
          <th class="align-middle bg-light">
            <div><%= period[:time].split('-')[0] %>-</div>
            <div><%= period[:time].split('-')[1] %></div>
            <div class="fw-bold"><%= period[:name] %></div>
          </th>
          
          <!-- 横軸: 各日付ごとにセルを作成 -->
          <% (@week_days || []).each do |day| %>
            <td>
              <%# マップから該当する日付・時間のデータを取り出す %>
              <% time_slot = @time_slots_map[[day, period[:time]]] %>
              
              <% if time_slot %>
                <!-- 授業がある場合の表示 -->
                <div class="lesson-card p-2" style="background-color: #eef8ff; border-radius: 5px;">
                  
                  <!-- 授業名 -->
                  <div class="fw-bold mb-1 text-primary">
                    <%= time_slot.lesson.lesson_name %>
                  </div>
                  
                  <!-- 担当教員名 -->
                  <% if time_slot.lesson.faculty %>
                    <span class="badge bg-success">
                      <%= time_slot.lesson.faculty.name %> 先生
                    </span>
                  <% end %>
                  
                </div>
              <% else %>
                <!-- 授業がない場合は空欄 -->
                &nbsp;
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>